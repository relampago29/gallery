rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // upload do master pelo admin autenticado
    match /masters/public/{path=**} {
      allow read: if false;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    match /masters/highlights/{path=**} {
      allow read: if false;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    match /masters/sessions/{path=**} {
      allow read: if false;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // variantes p√∫blicas servidas ao site
    match /variants/public/{path=**} {
      allow read: if true;
      allow write: if false;
    }

    match /variants/sessions/{path=**} {
      allow read, write: if false;
    }

    match /{allPaths=**} { allow read, write: if false; }
  }
}
